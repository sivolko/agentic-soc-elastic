# ============================================================
# .env.example — Copy to .env and fill in your values
# ============================================================

# ── ELASTIC CLOUD ────────────────────────────────────────────
# From: cloud.elastic.co → Your Deployment → Copy endpoint URL
ELASTIC_CLOUD_URL=https://YOURDEPLOYMENT.es.REGION.aws.elastic-cloud.com:9243

# From: Kibana → Stack Management → API Keys → Create API Key
# Give it: cluster:monitor, indices:all on soc_*, logs-*, .alerts-*
ELASTIC_API_KEY=your_base64_encoded_api_key_here

# Kibana endpoint (same host, port 5601)
KIBANA_URL=https://YOURDEPLOYMENT.kb.REGION.aws.elastic-cloud.com:9243

# ── ANTHROPIC ────────────────────────────────────────────────
# From: console.anthropic.com → API Keys
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ── DEMO MODE ────────────────────────────────────────────────
# true  = all actions logged but not executed (safe for demo)
# false = real API calls made to IdP, EDR, etc.
DEMO_MODE=true

# ── ALERT INDEX ──────────────────────────────────────────────
# Use soc-lab-alerts for the demo (created by 00_lab_setup.py)
# Use .alerts-security.alerts-default for real Elastic Security
ALERT_INDEX=soc-lab-alerts
